<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/finish.finish"
        android:layout_width="414dp"
        android:layout_height="381dp"
        android:contentDescription="@android:string/no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/great_alert_finish" />

    <Button
        android:id="@+id/finish.score"
        android:layout_width="265dp"
        android:layout_height="71dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_style"
        android:text="@string/scoreButton"
        android:textColor="@color/redPuzzling"
        android:textSize="50sp"
        android:textStyle="bold"
        app:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finish.finish" />

    <Button
        android:id="@+id/finish.exit"
        android:layout_width="128dp"
        android:layout_height="61dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_style"
        android:text="@string/exitButton"
        android:textColor="@color/redPuzzling"
        android:textSize="50sp"
        android:textStyle="bold"
        app:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finish.score"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>