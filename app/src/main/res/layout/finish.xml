<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backgrod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:contentDescription="@android:string/no"
        tools:ignore="MissingConstraints,ImageContrastCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/finish.finish"
        android:layout_width="414dp"
        android:layout_height="381dp"
        android:layout_marginBottom="348dp"
        android:contentDescription="@android:string/no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mockup_p9___eng_great2_0" />

    <Button
        android:id="@+id/finish.score"
        android:layout_width="265dp"
        android:layout_height="71dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/regular"
        android:text="@string/scoreButton"
        android:textColor="@color/redPuzzling"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/finish.exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/finish.exit"
        android:layout_width="128dp"
        android:layout_height="61dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/regular"
        android:text="@string/exitButton"
        android:textColor="@color/redPuzzling"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgrod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</android.support.constraint.ConstraintLayout>