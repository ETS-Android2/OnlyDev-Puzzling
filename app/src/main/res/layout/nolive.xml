<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/nolive.retry"
        android:layout_width="267dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_style"
        android:text="@string/retryButton"
        android:textColor="@color/redPuzzling"
        android:textSize="50sp"
        android:textStyle="bold"
        app:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/nolive.exit"
        android:layout_width="136dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_style"
        android:text="@string/exitButton"
        android:textColor="@color/redPuzzling"
        android:textSize="50sp"
        android:textStyle="bold"
        app:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nolive.retry"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="389dp"
        android:layout_height="380dp"
        android:contentDescription="@android:string/no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_lives_alert" />

</androidx.constraintlayout.widget.ConstraintLayout>